{
  "extends": [
    "next/core-web-vitals",
    "airbnb", 
    "airbnb-typescript", 
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/jsx-filename-extension": [
      1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }
    ],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["./*.js"]}],
    "global-require": "off"
  }
}
